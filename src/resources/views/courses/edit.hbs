            <label for="name">Name</label>
            <input type="" class="form-control" value="{{course.name}}" id="name" name="name">
        </div>
        <div class="form-group">
            <label for="description">Mo Ta</label>
            <input type="" class="form-control" value="{{course.description}}" id="description" name="description">
        </div>
